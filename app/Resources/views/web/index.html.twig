{% block javascripts %}
  {{ parent() }}
  <script>

    function accueil(){
      $("body").hide();
      $("body").fadeIn(1500);

      $("#mainLogo").hide();
      $("#mainLogo").fadeIn(1000);

      $("#soustitre").hide();
      $("#soustitre").delay(300).fadeIn(1000);

      $("#recherche").hide();
      $("#recherche").delay(600).fadeIn(1000);

      $("#help-box").hide();
      $("#help-box").delay(900).fadeIn(1000);

      $("footer").hide();
      $("footer").delay(1500).fadeIn(1000);
    }

  //  accueil();

    $("#chercher-general").click(
            function(){
              $("#general").hide();
              $("#domaines").fadeIn(1000);
            }
    );

    $("#chercher-domaines").click(
            function(){
              $("#domaines").hide();
              $("#methode").fadeIn(1000);
            }
    );

    $("#chercher-methode").click(
            function(){
              $("#methode").hide();
              $("#general").fadeIn(1000);
            }
    );
  </script>
